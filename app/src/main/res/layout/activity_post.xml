<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161823"> <!-- 抖音深色背景 -->

    <!-- 顶部标题栏 -->
    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_launcher_foreground"
            app:tint="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="发布图文"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_publish"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:background="@android:color/holo_red_dark"
            android:text="发布"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_toolbar"
        app:layout_constraintTop_toBottomOf="@+id/header_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 图片九宫格区域 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="长按拖拽可调整顺序"
                android:textColor="#666666"
                android:textSize="12sp" />

            <!-- 文本编辑区域 -->
            <EditText
                android:id="@+id/et_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:gravity="top|start"
                android:hint="填写标题会有更多赞哦~\n添加正文，分享你的故事..."
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:minLines="5" />

            <!-- 位置显示 -->
            <LinearLayout
                android:id="@+id/btn_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#252525"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击获取位置"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 底部工具栏 -->
    <LinearLayout
        android:id="@+id/bottom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#161823"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 修复点1: 增加转义字符 \ -->
        <Button
            android:id="@+id/btn_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\# 话题"
            android:textSize="12sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="#FFFFFF"/>

        <!-- 修复点2: 增加转义字符 \ -->
        <Button
            android:id="@+id/btn_at_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\@ 朋友"
            android:textSize="12sp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:textColor="#FFFFFF"/>

        <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>

        <!-- AI 按钮 -->
        <Button
            android:id="@+id/btn_ai_generate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✨ AI配文"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_char_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/2000"
            android:layout_marginStart="10dp"
            android:textColor="#666666"
            android:textSize="12sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>